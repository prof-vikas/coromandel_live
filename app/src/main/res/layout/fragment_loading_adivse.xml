                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/la_ly_margin_bottom"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/la_ly_pd_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/commodity"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />

                    <EditText
