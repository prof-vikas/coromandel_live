<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coromandel_bg"
    tools:context=".fragments.CWHFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/form_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@color/fragment_title_text_bg"
                android:padding="5dp"
                android:text="@string/title_coromandel"
                android:fontFamily="@font/source_sans_pro_black"
                android:textAlignment="center"
                android:textColor="@color/fragment_title_text_color"
                android:textSize="@dimen/la_title_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cardView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:id="@+id/cwh_title_rfid_tag_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:id="@+id/cwh_rfid_tag_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="RFID Tag"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />

                    <EditText
                        android:id="@+id/cwh_edt_rfid_tag"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:enabled="false"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:inputType="textAutoComplete"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_lep_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:id="@+id/cwh_lep_number_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/lep_no"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />

                    <EditText
                        android:id="@+id/cwh_edt_lep_number"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cwh_edt_rectangle_height"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:enabled="false"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/driverName"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />

                    <EditText
                        android:id="@+id/cwh_edt_driver_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:enabled="false"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_truck_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/TruckNumber"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />

                    <EditText
                        android:id="@+id/cwh_edt_truck_no"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cwh_edt_rectangle_height"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:enabled="false"
                        android:inputType="text"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:textAllCaps="true"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/commodity"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />


                    <EditText
                        android:id="@+id/cwh_edt_commodity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:enabled="false"
                        android:inputType="text"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_gross_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/grossWeight"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />


                    <EditText
                        android:id="@+id/cwh_edt_gross_weight"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cwh_edt_rectangle_height"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:enabled="false"
                        android:inputType="text"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_previous_rmg_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/Previous_rmg_no"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />


                    <EditText
                        android:id="@+id/cwh_edt_previous_rmg_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:enabled="false"
                        android:inputType="text"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_rmg_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/update_rmg_no"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />


                    <Spinner
                        android:id="@+id/cwh_spinner_update_rmg_no"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cwh_edt_rectangle_height"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:background="@drawable/reactangle_spinner_select_able_field"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cwh_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/remark"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />

                    <Spinner
                        android:id="@+id/cwh_spinner_remark"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/cwh_edt_rectangle_height"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:layout_weight="4"
                        android:background="@drawable/reactangle_spinner_select_able_field"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="@dimen/common_edt_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/cwh_ly_pd_bottom"
                    android:layout_marginBottom="@dimen/common_ly_margin_bottom"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/unloading_out_time"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_tv_txt"
                        android:textSize="@dimen/common_tv_text" />

                    <TextClock
                        android:id="@+id/cwh_tv_clock"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/la_edt_rectangle_height"
                        android:gravity="center_vertical"
                        android:layout_weight="4"
                        android:layout_marginStart="@dimen/common_edt_rectangle_margin_start_left"
                        android:enabled="false"
                        android:paddingLeft="@dimen/common_edt_rectangle_pd_left"
                        android:fontFamily="@font/source_sans_pro_semi_bold"
                        android:textColor="@color/wh_edt_txt"
                        android:background="@drawable/rectangle_edt_read_only_field"
                        android:textSize="@dimen/common_edt_text"
                        android:format12Hour="dd-MM-yy hh:mm:ss a"/>
                    <!--            android:format24hours="hh:mm:ss a  EEE MMM d"-->
                </LinearLayout>

                <!--Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5" />

                    <Button
                        android:id="@+id/cwh_btn_submit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:backgroundTint="@color/orange800"
                        android:text="@string/submit"
                        android:fontFamily="@font/source_sans_pro_black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/cwh_btn_reset"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:backgroundTint="@color/light_black"
                        android:text="@string/cancel"
                        android:fontFamily="@font/source_sans_pro_black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.5" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom">

                <include layout="@layout/footer"
                    android:id="@+id/rl_footer"
                    android:layout_width="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    <ProgressBar
        android:id="@+id/cwh_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:indeterminateDrawable="@drawable/progress_icon"
        android:visibility="gone"
        android:layout_centerInParent="true" />


</RelativeLayout>
