            app:iconSpaceReserved="false">
            <EditTextPreference
                android:defaultValue="http://"
                android:key="rfid_api_address"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:title="Api Address"
                app:iconSpaceReserved="false" />
        </PreferenceCategory>-->


    <PreferenceCategory
        android:title="Loading Difference"
        android:layout="@layout/preferences_category"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:key="enable_loading_difference"
            android:title="Enable Loading Difference"
            android:summary=""
            android:defaultValue="true"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:iconSpaceReserved="false"
            app:summary="" />
    </PreferenceCategory>

</PreferenceScreen>