<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RFIdTagScanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/fragment_title_text_bg</item>

<!--        <item name="android:fontFamily">@font/ubantutitle</item>-->
        <!-- For the resting Spinner style -->
     <!--   <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>-->

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

      <!--  <item name="Base.Theme.AppCompat">
            @style/checkBoxStyle
        </item>
-->
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:paddingLeft">@dimen/common_edt_rectangle_pd_left</item>
        <item name="android:textSize">@dimen/common_edt_text</item>
        <item name="android:textColor">@color/wh_edt_txt</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:hint">Select dropdown</item>
        <item name="android:fontFamily">@font/source_sans_pro_semi_bold</item>
        <item name="hintTextColor">@color/fragment_edt_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/checkbox_bg</item>
        <item name="android:textColorSecondary">@color/checkbox_bg</item>
    </style>


</resources>